<table class="list">
  <thead>
    <tr>
      <th>Field</th>
      <th>Transformer</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @transformations.each do |transformation| %>
    <tr>
      <td><%= transformation[:field_name] %></td>
      <td><%= transformation[:transformer_name] %></td>
      <td><%= delete_link("Delete", "/projects/#{@project.slug}/resources/#{@resource.id}/transformations/#{transformation.id}") %></td>
    </tr>
  <% end %>
  </tbody>
</table>
