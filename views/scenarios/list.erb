<% if @scenarios.empty? %>
<p>There are currently no scenarios for this project.</p>
<% else %>
<table class="list">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  <% @scenarios.each do |scenario| %>
    <tr>
      <td><a href="/projects/<%= @project.slug %>/scenarios/<%= scenario.id %>"><%= scenario[:name] %></a></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
