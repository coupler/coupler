<section class="files">
  <header>
    <h2>Files</h2>
  </header>

  <% if @files.empty? %>
    <p>There aren't any files yet.</p>
  <% else %>
    <ul>
      <% @files.each do |file| %>
        <li><%= file.filename %></li>
      <% end %>
    </ul>
  <% end %>

  <section class="form">
    <header>
      <h3>Upload file</h3>
    </header>

    <form action="/files" method="post" enctype="multipart/form-data">
      <p>
        <label>File: <input type="file" name="file" /></label>
      </p>
      <p>
        <input type="submit" />
      </p>
    </form>
  </section>
</section>
