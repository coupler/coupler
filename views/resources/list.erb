<% if @resources.empty? %>
<p>There are currently no resources for this project.</p>
<% else %>
<table class="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Database</th>
      <th>Table</th>
    </tr>
  </thead>
  <tbody>
  <% @resources.each do |resource| %>
    <tr>
      <td><a href="/projects/<%= @project.slug %>/resources/<%= resource.id %>"><%= resource[:name] %></a></td>
      <td><%= resource[:database_name] %></td>
      <td><%= resource[:table_name] %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
<p>
  <a href="/projects/<%= @project.slug %>/resources/new">Add resource</a>
</p>
